= content_for :title, "Site: #{@site.url.blank? ? "Empty" : @site.url}"
= content_for :nav do
	%li= link_to 'Sites', sites_path, class: 'sites icon current'
	%li= link_to 'Account', account_path, class: 'account icon'

#site
	%h1 Site: 
	%p.url= @site.url

	%h2 Status:
	%p.status= render partial: 'status'
	
	- unless @site.css_selector.blank?
		%h2 CSS Selector:
		%p= @site.css_selector
		
	- unless @site.xpath.blank?
		%h2 XPath:
		%p= @site.xpath

	%p.control
		Actions:
		= link_to 'edit', edit_site_path(@site), class: 'button pencil'
		= link_to 'remove', remove_site_path(@site), class: 'button trash'
		= link_to 'refresh', refresh_site_path(@site), class: 'button refresh'
