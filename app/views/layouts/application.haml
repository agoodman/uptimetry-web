%body
	#header
		%ul#menu
			%li#logo
				= link_to 'up • tīm • e • try', root_path
				%div -noun
				%p the practice or profession of examining the health and well-being of a website
			= yield(:nav)
	
	#content
		- if flash[:notice]
			.ui-state-highlight
				%span{:style => "float: left; margin-right: 0.3em;", :class => 'ui-icon ui-icon-info'}
				= flash[:notice]
		- if flash[:alert]
			.ui-state-error
				%span{:style => "float: left; margin-right: 0.3em;", :class => 'ui-icon ui-icon-alert'}
				= flash[:alert]
		
		= yield
	
