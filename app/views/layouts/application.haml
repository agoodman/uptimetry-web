!!!
%html
	%head
		%title 
			Uptimetry -
			= yield(:title)
		%script{:src => "http://www.google.com/jsapi?key=ABQIAAAAPxTP6_umMHWyfMXHRo_PQBSEfduqM-1DVSJvrAuG-sXMl3D3XxRzHgplRb-82VvQp6BVNPn5n6zyAQ", :type => "text/javascript"}
		%link{:rel => "stylesheet", :href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/themes/eggplant/jquery-ui.css", :type => "text/css"}
		= stylesheet_link_tag 'style'
		= javascript_include_tag :defaults
		= csrf_meta_tag
		%script{ :type => "text/javascript", :charset => "utf-8"}
			google.load("jquery","1.4.2");
			google.load("jqueryui","1.8.2");
		%script{ :type => "text/javascript", :charset => "utf-8"}
			jQuery.noConflict();
			jQuery(document).ready( function() {
			jQuery('.button.trash').button({icons:{primary:'ui-icon-trash'},text:false});
			jQuery('.button.wrench').button({icons:{primary:'ui-icon-wrench'},text:false});
			jQuery('.button').button();
			jQuery('.datepicker').datepicker();
			});

%body
	#header
		= link_to 'Uptimetry', root_path
		#menu
			#public_menu
				%ul
					%li= link_to 'Features', '#'
					%li= link_to 'Pricing', '#'
					%li= link_to 'Support', '#'
			#user_menu
				%ul
					- if signed_in?
						%li= link_to 'My Sites', sites_path
						%li= link_to 'My Account', account_path
						%li= link_to 'Sign Out', sign_out_path
					- else
						%li= link_to 'Sign Up', sign_up_path
						%li= link_to 'Sign In', sign_in_path
	
	#content
		= yield
	
